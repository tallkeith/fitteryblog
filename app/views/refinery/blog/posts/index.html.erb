<!--body content -->
	<div class="pull-left">
		<% content_for :body do %>
		<div class="row header">
		  <%= image_tag('fittery-image.jpg', class: 'img-responsive') %>
		  <h1 class="col-sm-12">
		    Blog
		  </h1>
		</div>
		<div class="blog">
		  <div class="inner-content col-md-7">
			  <%= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) if Refinery::Pages.default_parts.any? %>

				  <% if @posts.any? %>
				    <section id="blog_posts">
				      <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
				      <%= will_paginate @posts %>
				    </section>
				  <% else %>
				    <p><%= t('.no_blog_articles_yet') %></p>
				  <% end %>
				<% end %>
			</div>
		</div>
	
<!-- end blog content -->

<!-- Side Bar -->
		<div class="pull-right">
			
			<% content_for :side_body_prepend do -%>
			  <%= raw @page.content_for(Refinery::Pages.default_parts.second.to_sym) %>
			<% end if Refinery::Pages.default_parts.many? -%>
			<%= render '/refinery/blog/shared/body_content_right' %>

			<%= render "/refinery/content_page" %>
			<% content_for :stylesheets, stylesheet_link_tag('refinery/blog/frontend') %>
		</div>
	</div>
<!-- End Side Bar