      :class => "cancel confirm-delete",                                                  |
      :title => t('.delete'),                                                             |
      :method => :delete,                                                                 |
      :data => {                                                                          |
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => post.title) |
      }                                                                                   |
