.author_bio
  - unless @author.nil?
    .row.well
      .col-md-4
        %img.img-circle{:alt => "#{@author.full_name}", :height => "100%", :src => "#{@author.image.url}", :width => "100%"}/
      .col-md-8
        %h2.auth_title= @author.full_name
        %h4.auth_info
          = @author.auth_title.upcase
        .twit_img
          = image_tag("twitter.png", class: "img-responsive", :size => "25x25")
        .twit-handle
          = link_to "#{@author.auth_twitter}", "http://www.twitter.com/#{@author.auth_twitter}", :target =>"_blank"
        %p= @author.auth_bio
