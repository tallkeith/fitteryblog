
  <% if post.live? %>
    <article class="blog_post" id="<%= dom_id(post) %>">
      <header>
        <%= link_to refinery.blog_post_path(post) do %>

          <h2><%= post.title %></h2>
        <% end %>
        <div class="text-justify">
          <section class='details'>
            <h4>
              <ul class="list-inline">
              <!-- Begin author link -->
                <li><%= link_to "#{post.author.username.upcase}", "/blog/author/#{post.author.id}" if post.author.present? %></li>
              <!-- End author link -->
                
                <li>&middot;</li>

                <% if (categories = post.categories.translated).any? %>
                <li><%=raw categories.collect { |category| link_to category.title.upcase, refinery.blog_category_path(category) }.to_sentence %></li>
                
                <li>&middot;</li>
                
                <% end %>

                <time>
                    <%= post.published_at.strftime("%b %-d, %Y").upcase %>
                  </time>
              </ul>
            </h4>
          </section>
        </div>
        <br>
      </header>


      <section class='clearfix'>
        <% if blog_post_teaser_enabled? %>
          <%= blog_post_teaser(post) %>
        <% else %>
          <%= post.body.html_safe %>
        <% end %>
      </section>
      <footer>
        
          <br>
          <%= link_to 'Read More >>', refinery.blog_post_path(post) %>
          <br>
        
        
      </footer>
    </article>
  <% end %>
