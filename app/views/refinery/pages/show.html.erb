<h1><%= @page.title %></h1>
<%= raw @page.content_for(:left_body) %>
<%= raw @page.content_for(:middle_body) %>
<%= raw @page.content_for(:right_body) %>

<% if params[:user_id].present? %>
<% user_id = params[:user_id] %>
		<% Refinery::Blog::Post.where(user_id: user_id).each do |post| %>
			<h3><%= post.title %></h3>
	<% end %>
<% end %>
